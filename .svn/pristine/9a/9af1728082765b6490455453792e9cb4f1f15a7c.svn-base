    public int poista1(int id) { 
        int ind = etsiId(id); 
        if (ind < 0) return 0; 
        lkm--; 
        for (int i = ind; i < lkm; i++) 
            objects[i] = objects[i + 1]; 
        objects[lkm] = null; 
        muutettu = true; 
        return 1; 
    } 
    
    public int etsiId(int id) { 
        for (int i = 0; i < lkm; i++) 
            if (id == objects[i].getEmployeeNumber()) return i; 
        return -1; 
    } 

    
